    <script>
        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) {
                return label.join(' ');
            }
            return label;
        };

        const chartColors = {
            blue: '#00A6ED',
            orange: '#FF6600',
            yellow: '#FFB400',
            darkBlue: '#003554',
            grid: 'rgba(229, 231, 235, 0.2)'
        };

        const donutChartOptions = {
            maintainAspectRatio: false,
            responsive: true,
            cutout: '70%',
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        color: '#E5E7EB',
                        boxWidth: 15,
                        padding: 15
                    }
                },
                tooltip: {
                    callbacks: {
                        title: tooltipTitleCallback
                    }
                }
            }
        };

        new Chart(document.getElementById('researchSkillsChart'), {
            type: 'doughnut',
            data: {
                labels: ['Research', 'Mentoring', 'Teaching'],
                datasets: [{
                    label: 'Academic Skills',
                    data: [50, 30, 20],
                    backgroundColor: [chartColors.blue, chartColors.orange, chartColors.yellow],
                    borderColor: '#003554',
                    borderWidth: 4
                }]
            },
            options: donutChartOptions
        });

        new Chart(document.getElementById('analyticalSkillsChart'), {
            type: 'doughnut',
            data: {
                labels: ['Critical Thinking', 'Data Analysis', 'Problem-Solving'],
                datasets: [{
                    label: 'Analytical Skills',
                    data: [45, 35, 20],
                    backgroundColor: [chartColors.blue, chartColors.orange, chartColors.yellow],
                    borderColor: '#003554',
                    borderWidth: 4
                }]
            },
            options: donutChartOptions
        });
        
        new Chart(document.getElementById('logisticsSkillsChart'), {
            type: 'doughnut',
            data: {
                labels: ['Process Improvement', 'Team Training', 'Inventory Logistics'],
                datasets: [{
                    label: 'Operational Skills',
                    data: [40, 30, 30],
                    backgroundColor: [chartColors.blue, chartColors.orange, chartColors.yellow],
                    borderColor: '#003554',
                    borderWidth: 4
                }]
            },
            options: donutChartOptions
        });

        new Chart(document.getElementById('publicationsChart'), {
            type: 'bar',
            data: {
                labels: ['2013', '2016', '2019', '2020'],
                datasets: [{
                    label: '# of Publications',
                    data: [2, 1, 1, 2],
                    backgroundColor: chartColors.blue,
                    borderColor: chartColors.blue,
                    borderWidth: 1,
                    borderRadius: 5
                }]
            },
            options: {
                maintainAspectRatio: false,
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            color: '#E5E7EB',
                            stepSize: 1
                        },
                        grid: {
                            color: chartColors.grid
                        }
                    },
                    x: {
                        ticks: {
                            color: '#E5E7EB'
                        },
                        grid: {
                            display: false
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        callbacks: {
                            title: tooltipTitleCallback
                        }
                    }
                }
            }
        });
    </script>
